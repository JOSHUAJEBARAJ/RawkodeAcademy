{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@shortcodes/*": [
        "./src/shortcodes/*"
      ],
      "@partials/*": [
        "./src/partials/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@content/*": [
        "./src/content/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ]
    }
  }
}