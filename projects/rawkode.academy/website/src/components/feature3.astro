---
import { Icon } from "astro-icon";

interface Props {
  title: string;
  subtitle: string;
  features: Feature[];
}

interface Feature {
  icon: string;
  title: string;
  subtitle: string;
}

const { title, subtitle, features } = Astro.props;
---

<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl text-center sm:py-16 lg:px-6">
    <h2
      class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
    >
      {title}
    </h2>
    <p class="text-gray-500 sm:text-xl dark:text-gray-400">
      {subtitle}
    </p>
    <div
      class="mt-8 lg:mt-12 space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0"
    >
      {
        features.map((feature) => (
          <div>
            <Icon
              class="mx-auto mb-4 w-12 h-12 text-primary-600 dark:text-primary-500"
              name={feature.icon}
            />
            <h3 class="mb-2 text-xl font-bold dark:text-white">
              {feature.title}
            </h3>
            <p class="mb-4 text-gray-500 dark:text-gray-400">
              {feature.subtitle}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
